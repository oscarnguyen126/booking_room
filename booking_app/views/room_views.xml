<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="room_form" model="ir.ui.view">
            <field name="name">room.room.form</field>
            <field name="model">room.room</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" string="Phòng họp"/>
                            <field name="volume" string="Sức chứa tối đa"/>
                        </group>
                        <notebook>
                            <page string="Thiết bị">
                                <field name="equipment" options="{'no_create': True, 'no_open': True}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="room_tree" model="ir.ui.view">
            <field name="name">room.room.tree</field>
            <field name="model">room.room</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Phòng họp"/>
                    <field name="volume" string="Sức chứa tối đa"/>
                    <field name="equipment" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="view_room_search" model="ir.ui.view">
            <field name="name">room.room.search</field>
            <field name="model">room.room</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="volume"/>
                    <field name="equipment"/>
                </search>
            </field>
        </record>

        <record id="list_room" model="ir.actions.act_window">
            <field name="name">Phòng họp</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">room.room</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
