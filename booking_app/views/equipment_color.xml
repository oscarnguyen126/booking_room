<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="color_form" model="ir.ui.view">
            <field name="name">room.equipment.color.form</field>
            <field name="model">room.equipment.color</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="color" widget='color'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="color_tree" model="ir.ui.view">
            <field name="name">room.equipment.color.tree</field>
            <field name="model">room.equipment.color</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="color" widget='color'/>
                </tree>
            </field>
        </record>


        <record id="list_color" model="ir.actions.act_window">
            <field name="name">MÃ u</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">room.equipment.color</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
