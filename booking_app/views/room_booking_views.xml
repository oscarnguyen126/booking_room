<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="room_booking_form" model="ir.ui.view">
            <field name="name">room.booking.form</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="status" widget="statusbar" statusbar_visible="booking,confirmed"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="room_id"/>
                                <field name="description"/>
                                <field name="start_time"/>
                                <field name="stop_time"/>
                            </group>
                            <group>
                                <field name="requester" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="department"/>
                                <field name="partner_ids" widget="many2many_tags_email" placeholder="Add contacts to notify..." context="{'force_email':True, 'show_email':True}"/>
                            </group>
                        </group>
                        <footer>
                            <center>
                                <button type="object" name="confirm_button" string="Confirm" attrs="{'invisible': [('status','=','confirmed')]}" confirm="Once you confirm, the information won't be changed"/>
                                <button type="object" name="cancel_button" string="Cancel" attrs="{'invisible': [('status','=','booking')]}" confirm="Are you sure that you want to cancel the meeting?"/>
                            </center>
                        </footer>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="room_booking_calendar" model="ir.ui.view">
            <field name="name">room.booking.calendar</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <calendar string="Booking calendar" date_start="start_time" date_stop="stop_time" mode="month" quick_add="False" color="room_id" event_limit="5">
                    <field name="requester"/>
                    <field name="room_id" filters="1" invisible="1"/>
                </calendar>
            </field>
        </record>


        <record id="room_booking_graph" model="ir.ui.view">
            <field name="name">room.booking.graph</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <graph string="" type="bar" disable_linking="1">
                    <field name="room_id" type="row"/>
                    <field name="department" type="col"/>
                </graph>
            </field>
        </record>


        <record id="view_room_booking_search" model="ir.ui.view">
            <field name="name">room.booking</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <search>
                    <field name="description"/>
                </search>
            </field>
        </record>

        <record id="booking_action" model="ir.actions.act_window">
            <field name="name">Booking list</field>
            <field name="res_model">room.booking</field>
            <field name="view_mode">calendar,tree,form,graph</field>
            <field name="search_view_id" ref="view_room_booking_search"/>
        </record>



    </data>
</odoo>
