<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="room_booking_form" model="ir.ui.view">
            <field name="name">room.booking.form</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <header>
                            <!-- <button name="action_quotation_send" string="Send by Email" type="object" class="btn-primary" data-hotkey="g"/> -->
                            <field name="status" widget="statusbar" statusbar_visible="booking,confirmed"/>
                        </header>
                        <group>
                            <group>
                                <field name="room_id"/>
                                <field name="description"/>
                                <field name="requester" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="department"/>
                                <field name="partner_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="start_time"/>
                                <field name="stop_time"/>
                            </group>
                        </group>
                        <footer>
                            <button type="object" name="confirm_button" string="Confirm" attrs="{'invisible': [('status','=','confirmed')]}"/>
                            <button type="object" name="cancel_button" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="room_booking_calendar" model="ir.ui.view">
            <field name="name">room.booking.calendar</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <calendar string="Booking calendar" date_start="start_time" date_stop="stop_time" mode="month" quick_add="False" color="room_id" event_limit="5">
                    <field name="requester"/>
                    <field name="description"/>
                    <field name="room_id" filters="1" invisible="1"/>
                </calendar>
            </field>
        </record>


        <record id="booking_action" model="ir.actions.act_window">
            <field name="name">Booking list</field>
            <field name="res_model">room.booking</field>
            <field name="view_mode">calendar,form</field>
        </record>
    </data>
</odoo>
