<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="room_booking_form" model="ir.ui.view">
            <field name="name">room.booking.form</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <form string="booking" delete="false" create="false">
                    <header>
                        <button type="object" name="edit_button" string="Sửa đổi thông tin"
                                attrs="{'invisible': [('status','in',('booking','cancelled'))]}"/>
                        <button type="object" name="confirm_button" string="Xác nhận"
                                attrs="{'invisible': [('status','in',('confirmed','cancelled'))]}"/>
                        <button type="object" name="cancel_button" string="Hủy lịch họp"
                                confirm="Bạn có chắc chắn muốn hủy cuộc họp này không"
                                attrs="{'invisible': [('status','in',('booking','cancelled'))]}"/>
                        <field name="status" widget="statusbar" statusbar_visible="booking,confirmed,cancelled"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="title" attrs="{'readonly': [('status','in',('confirmed','cancelled'))]}"/>
                                <field name="room_id"
                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                       attrs="{'readonly': [('status','in',('confirmed','cancelled'))]}"/>
                                <field name="start_time"
                                       attrs="{'readonly': [('status','in',('confirmed','cancelled'))]}"/>
                                <field name="stop_time"
                                       attrs="{'readonly': [('status','in',('confirmed','cancelled'))]}"/>
                            </group>
                            <group>
                                <field name="requester"
                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                       attrs="{'readonly': [('status','in',('confirmed','cancelled'))]}"/>
                                <field name="department_id"
                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                       attrs="{'readonly': [('status','in',('confirmed','cancelled'))]}"/>
                                <field name="partner_ids" widget="many2many_tags_email"
                                       placeholder="Thêm người tham gia"
                                       context="{'force_email':True, 'show_email':True}"
                                       attrs="{'readonly': [('status','in',('confirmed','cancelled'))]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"
                                   attrs="{'readonly': [('status','in',('confirmed','cancelled'))]}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="room_booking_tree" model="ir.ui.view">
            <field name="name">room.booking.tree</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <tree decoration-muted="status == 'booking' " decoration-success="status == 'confirmed'"
                      decoration-danger="status == 'cancelled'">
                    <field name="title"/>
                    <field name="start_time"/>
                    <field name="stop_time"/>
                    <field name="room_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="partner_ids" widget="many2many_tags"/>
                    <field name="requester"/>
                    <field name="department_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>


        <record id="room_booking_calendar" model="ir.ui.view">
            <field name="name">room.booking.calendar</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <calendar string="Đặt phòng họp" date_start="start_time" date_stop="stop_time" mode="month"
                          quick_add="False" color="room_id" event_limit="5" event_open_popup="True" delete="false">
                    <field name="room_id"/>
                    <field name="requester"/>
                    <field name="status"/>
                </calendar>
            </field>
        </record>


        <record id="booking_pivot" model="ir.ui.view">
            <field name="name">Thống kê thời gian sử dụng phòng họp</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <pivot string="Booking">
                    <field name="room_id" type="col"/>
                    <field name="department_id" type="row"/>
                    <field name="during" type="measure"/>
                </pivot>
            </field>
        </record>


        <record id="view_room_booking_search" model="ir.ui.view">
            <field name="name">room.booking</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <search>
                    <field name="title"/>
                    <field name="room_id"/>
                    <field name="requester"/>
                    <filter name="requester_filter" string="Lịch của tôi" domain="[('requester','=', uid)]"/>
                    <field name="department_id"/>
                    <field name="start_time"/>
                    <field name="stop_time"/>
                    <field name="description"/>
                    <field name="partner_ids"/>
                    <field name="status"/>
                </search>
            </field>
        </record>


        <record id="booking_action" model="ir.actions.act_window">
            <field name="name">Danh sách đặt phòng</field>
            <field name="res_model">room.booking</field>
            <field name="view_mode">calendar,tree,form,pivot</field>
            <field name="search_view_id" ref="view_room_booking_search"/>
        </record>

    </data>
</odoo>
