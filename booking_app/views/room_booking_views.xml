<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="room_booking_form" model="ir.ui.view">
            <field name="name">room.booking.form</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <form string="booking" delete="false" create="false">
                    <header>
                        <button type="object" name="edit_button" string="Sửa đổi thông tin"
                                attrs="{'invisible': [('state','in',('booking','cancelled'))]}"/>
                        <button type="object" name="confirm_button" string="Xác nhận"
                                attrs="{'invisible': [('state','in',('confirmed','cancelled'))]}"/>
                        <button type="object" name="cancel_button" string="Hủy lịch họp"
                                attrs="{'invisible': [('state','in',('booking','cancelled'))]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="booking,confirmed,cancelled"/>
                        <button type="object" name="back_to_draft" string="Back to draft"
                                attrs="{'invisible': [('state','!=','cancelled')]}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="title" attrs="{'readonly': [('edit_checker','=',False)]}"/>
                                <field name="room_id"
                                       options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                                       attrs="{'readonly': [('edit_checker','=',False)]}"/>
                                <field name="max_volume"/>
                                <field name="start_time" attrs="{'readonly': [('edit_checker','=',False)]}"/>
                                <field name="stop_time" attrs="{'readonly': [('edit_checker','=',False)]}"/>
                            </group>
                            <group>
                                <field name="requester"
                                       readonly="1"/>
                                <field name="department_id"
                                       readonly="1"/>
                                <field name="partner_ids" widget="many2many_tags_email"
                                       placeholder="Thêm người tham gia"
                                       context="{'force_email':True, 'show_email':True}" attrs="{'readonly': [('edit_checker','=',False)]}"/>
                                <field name="attached_file" attrs="{'readonly': [('edit_checker','=',False)]}"/>
                                <field name="note" attrs="{'readonly': [('edit_checker','=',False)]}"/>
                                <field name="reason" attrs="{'invisible': [('state','!=','cancelled')]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"
                                   attrs="{'readonly': [('state','in',('confirmed','cancelled'))]}"/>
                            <field name="edit_checker"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="room_booking_tree" model="ir.ui.view">
            <field name="name">room.booking.tree</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <tree decoration-muted="state == 'booking' " decoration-success="state == 'confirmed'"
                      decoration-danger="state == 'cancelled'" delete="false">
                    <field name="title"/>
                    <field name="start_time"/>
                    <field name="stop_time"/>
                    <field name="room_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="max_volume" optional="hide"/>
                    <field name="partner_ids" widget="many2many_tags" optional="hide"/>
                    <field name="requester"/>
                    <field name="department_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="room_booking_calendar" model="ir.ui.view">
            <field name="name">room.booking.calendar</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <calendar string="Đặt phòng họp" date_start="start_time" date_stop="stop_time" mode="month"
                          quick_add="False" color="room_id" event_limit="5" event_open_popup="True" delete="false" form_view_id="%(booking_app.room_booking_form)d">
                    <field name="room_id" filters="1"/>
                    <field name="requester" />
                    <field name="state" filters="1"/>
                </calendar>
            </field>
        </record>


        <record id="booking_pivot" model="ir.ui.view">
            <field name="name">Time using of each room</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <pivot string="Booking">
                    <field name="room_id" type="col"/>
                    <field name="department_id" type="row"/>
                    <field name="during" type="measure"/>
                </pivot>
            </field>
        </record>


        <record id="view_room_booking_search" model="ir.ui.view">
            <field name="name">room.booking</field>
            <field name="model">room.booking</field>
            <field name="arch" type="xml">
                <search>
                    <field name="title"/>
                    <field name="room_id"/>
                    <field name="requester"/>
                    <filter name="requester_filter" string="Lịch của tôi" domain="[('requester','=', uid)]"/>
                    <field name="department_id"/>
                    <field name="start_time"/>
                    <field name="stop_time"/>
                    <field name="description"/>
                    <field name="partner_ids"/>
                    <field name="state"/>
                </search>
            </field>
        </record>


        <record id="booking_action" model="ir.actions.act_window">
            <field name="name">Booking calendar</field>
            <field name="res_model">room.booking</field>
            <field name="view_mode">calendar,tree,form,pivot</field>
            <field name="search_view_id" ref="view_room_booking_search"/>
        </record>

    </data>
</odoo>
