<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <template id="edit_email_template">
            <h5>Reschedule meeting</h5>
            <div>
                <h3>
                    <t t-out="object.title"></t>
                </h3>
                <br></br>
                <div>
                    <span>Your meeting has been updated on:</span>
                    <strong>
                        <span>
                            <t t-out="object.cancel_booking_time" t-options="{'widget': 'datetime'}"/>
                        </span>
                    </strong>
                </div>
                <p>
                    Old room: <strong><t t-out="object.old_room_id.name"/></strong> <br></br>
                    New room: <strong><t t-out="object.room_id.name"/></strong>
                </p>
                <div>
                    <p>Old time:
                    <strong>
                        <span>
                            <t t-out="object.old_start_time" t-options="{'widget': 'datetime'}"/> - <t t-out="object.old_stop_time" t-options="{'widget': 'datetime'}"/>
                        </span>
                    </strong>
                    </p>
                    <p>New time:
                    <strong>
                        <span>
                            <t t-out="object.start_time" t-options="{'widget': 'datetime'}"/> - <t t-out="object.stop_time" t-options="{'widget': 'datetime'}"/>
                        </span>
                    </strong>
                    </p>
                </div>
                <div>
                    <p>New requirements: <strong><span><t t-out="object.requirements"/> </span></strong></p>
                </div>
            </div>
            <br></br><br></br>
            <p>This is an automated message - please do not reply directly to this email</p>
            <p>Best regards,
            </p>
        </template>
    </data>
</odoo>
