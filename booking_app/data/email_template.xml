<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <template id="template_email_send_booking">
            <div style="margin: 0px; padding: 0px; font-size: 13px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                The meeting room has been booked completely! <br/>
                Room: <t t-out="object.room_id.name"/><br/>
                From: <t t-out="start_time"/> (<t t-out="tz"/>)<br/>
                To: <t t-out="stop_time"/> (<t t-out="tz"/>)<br/>
                Booked by: <t t-out="object.requester.name"/>  <br/>
                Contents of the meeting:  <t t-out="object.description"/><br/>
                Please arrive on time!<br/>
                <br/>
                Best regards,
                <br/>
                <br/>
                </p>
            </div>
        </template>
    </data>
</odoo>
