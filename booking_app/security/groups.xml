<odoo>

    <record id="module_department_category" model="ir.module.category">
        <field name="name">Department</field>
        <field name="sequence">10</field>
    </record>

    <record id="module_department_category_user" model="ir.module.category">
        <field name="name">Department</field>
        <field name="parent_id" ref="module_department_category"/>
        <field name="description">Helps you handle application</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_department_category_user"/>
        <field name="comment">Users belong to this group can use this application</field>
    </record>

    <record id="group_admin" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_department_category_user"/>
        <field name="comment">Users belong to this group can control this application</field>
    </record>

</odoo>